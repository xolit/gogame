<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="GoGames - Your ultimate destination for premium gaming experiences"
    />
    <meta
      name="keywords"
      content="GoGames, games, gaming, premium, experiences, download, play"
    />
    <meta name="author" content="Abdul Basit" />
    <link rel="stylesheet" href="css/style.css" />
    <link rel="stylesheet" href="css/Animations.css" />
    <link rel="stylesheet" href="css/Responsive.css" />
    <link rel="icon" href="/imgs/logo.jpg" type="image/x-icon" />
    <title>GoGames</title>
  </head>
  <body>
    <!-- Navbar -->
    <nav class="Navbar">
      <ul class="nav-links">
        <li class="logo" id="username"></li>
      </ul>
    </nav>

    <!-- Home Section -->
    <section id="home">
      <h1 class="animate fade-in delay-1">Welcome to GoGames</h1>
      <p class="animate fade-in delay-2 sec-text">
        Your ultimate destination for premium gaming experiences
      </p>
    </section>

    <!-- Games Section -->
    <section id="games">
      <h2>Featured Games</h2>
      <div class="games-container">
        <% if (data.length > 0) { %> <% data.forEach((game) => { %>
        <div class="game-card">
          <h2><%= game.title %></h2>
          <p><%= game.description %></p>
          <p>Engine: <%= game.engine %></p>
          <p>Platform: <%= game.platform %></p>
          <a href="<%= game.downloadLink %>" target="_blank">
            <button class="download-btn">Download</button>
          </a>
        </div>
        <% }) %> <% } else { %>
        <p>No games available.</p>
        <% } %>
      </div>
    </section>

    <!-- About Section -->
    <section id="about">
      <h2 style="animation: slideInRight 0.8s ease-out forwards">About Us</h2>
      <p style="animation: fadeIn 1s ease-out 0.3s forwards; opacity: 0">
        Passionate Indie Developer creating immersive gaming experiences since
        2020. We specialize in developing mid-quality games with engaging
        gameplay.
      </p>
      <br />
      <p style="animation: fadeIn 1s ease-out 0.3s forwards; opacity: 0">
        Hello, I'm Abdul Basit, a web and game developer skilled in HTML, CSS,
        JavaScript, C#. With experience across diverse projects, I specialize in
        crafting innovative solutions while prioritizing efficiency, continuous
        learning, and holistic growth.
      </p>
    </section>

    <div class="contributors">
      <% if (contributors.length > 0) { %>
      <h2 class="animate slide-left" id="roles">Roles</h2>
      <% contributors.forEach(function(contriList) { %>
      <p class="animate fade-in delay-1">
        <%= contriList.role %> : <%= contriList.name %>
      </p>
      <% }) %> <% } %>
    </div>

    <footer>
      <% if (socialLinks.length > 0) { %> <% socialLinks.forEach((scLink) => {
      %>
      <div class="social-links">
        <a href="<%= scLink.link %>" target="_blank"> <%= scLink.title %> </a>
        <% }) %> <% } %>
      </div>
      <p>Â© 2025 GoGames. All rights reserved.</p>
    </footer>

    <!-- JavaScript -->
    <script>
      const now = new Date();
      const hours = now.getHours();
      const minutes = now.getMinutes();
      const ampm = hours >= 12 ? "PM" : "AM";

      const formattedHours = hours % 12 || 12;
      const formattedMinutes = minutes.toString().padStart(2, "0");

      const currentTime = `${formattedHours}:${formattedMinutes} ${ampm}`;
      document.getElementById("username").innerHTML = currentTime;

      // Frontend JS for handling contributor roles
      const rolesHeading = document.getElementById("roles");
      const contributorElements = document.querySelectorAll(".contributors p");

      if (rolesHeading && contributorElements.length > 0) {
        contributorElements.forEach((element, index) => {
          // Stagger animation by adding delay classes or inline style
          element.style.animationDelay = `${index * 0.2}s`;
          element.classList.add("fade-in", "animate");

          // Optional: log each role for debugging
          console.log(`Role ${index + 1}:`, element.textContent);
        });
      }
    </script>
  </body>
</html>
